<div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="edit-modal-title">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="edit-modal-title">Editing a listing</h4>
      </div>
      <div class="modal-body">
        <div id="error_explanation">
          <h2>Please correct the following errors and try again:</h2>
        </div>
        <form method="POST">
          <input type="hidden" name="_method" value="patch">
          <div class="form-group">
            <label for="modal-field-global-rank">Global Rank</label>
            <input type="input" class="form-control" id="modal-field-global-rank" placeholder="Global Rank" name="listing[global_rank]">
            <p class="help-block">Must be a positive integer which isn't already in use</p>
          </div>
          <div class="form-group">
            <label for="modal-field-name">Site Name</label>
            <input type="input" class="form-control" id="modal-field-name" placeholder="Site Name" name="listing[name]">
          </div>
          <div class="form-group">
            <label for="modal-field-url">URL</label>
            <input type="input" class="form-control" id="modal-field-url" placeholder="URL" name="listing[url]">
          </div>
          <div class="form-group">
            <label for="modal-field-description">Description</label>
            <textarea class="form-control" rows="3" id="modal-field-description" listing="listing[description]"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="modal-submit-button">Update</button>
      </div>
    </div>
  </div>
</div>
