<p id="notice"><%= notice %></p>

<h1>
  Alexa Top 100 Sites
  <% if params[:page] %>
    &mdash; Page <%= params[:page] %>
  <% end %>
</h1>

<%= will_paginate @posts %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Description</th>
      <th>Global rank</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td class="global_rank"><%= listing.global_rank %></td>
        <td><%= listing.name %></td>
        <td><%= link_to listing.url, listing.url, target: "_blank" %></td>
        <td style="max-width: 400px"><%= listing.description %></td>
        <td><%= link_to 'Edit', "#" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @posts %>
